<GridLayout> :
    rows : 3
    textinput : textinput
    label : label
    button1 : button1


    TextInput :
        id : textinput
        size_hint : 1, 0.06
        multiline : False
        background_color : (255/255, 255/255, 200/255, 2)

    Label:
        id : label
        size_hint : 0.3 ,1
        text : 'Label'
        multiline : True
        color: (0/255, 0/255, 0/255, 1)
        background_color : (205/255, 205/255, 205/255, 1)
        canvas.before:
            Color:
                rgba : self.background_color
            Rectangle:
                size : self.size
                pos : self.pos

    Button :
        text : 'GO'
        id : button1
        size_hint : 1, 0.1
        on_release : label.text = root.find_item(id = textinput.text)
        background_color : (104/255, 255/255, 245/255, 1)

